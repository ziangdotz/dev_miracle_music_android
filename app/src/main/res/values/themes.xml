<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App 主题 -->
    <style name="Theme.app" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item> <!-- 应用的主要色调 -->
        <item name="colorPrimaryVariant">@color/white</item>  <!-- 应用的主要暗色调 -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="q">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item> <!-- 改变 statusBar 文字颜色（true 黑色， false 白色） -->
        <item name="android:windowOverscan">false</item> <!-- Activity 是否能在 statusBar 底部绘制 -->
        <item name="android:windowNoTitle">true</item> <!-- 隐藏标题栏 -->
    </style>

    <style name="CustomAlertDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- 正在播放中的 Audio 圆形进度条 -->
    <declare-styleable name="RoundProgressView">
        <attr name="radius" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="strokeColor" format="color"/>
    </declare-styleable>

</resources>